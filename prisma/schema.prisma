generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model DiscordAccount {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  discordId String @unique
}

model Signup {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String?
  limit    Int?
  players  String[]
  backups  String[]
  isLocked Boolean  @default(false)
}