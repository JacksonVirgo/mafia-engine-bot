// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model DiscordAccount {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  discordId String @unique
}

model Signup {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String?
  limit    Int?
  players  String[]
  backups  String[]
  isLocked Boolean  @default(false)
}

// Roles and Setups

model Role {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String  @unique
  alignment    String
  abilities    String
  winCondition String
  iconUrl      String?
  flavourText  String?
  roleColour   String?
  wikiUrl      String?
}
